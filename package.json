{
  "name": "wait-other-jobs",
  "version": "1.0.0",
  "description": "",
  "main": "lib/main.js",
  "engines": {
    "node": "16.x"
  },
  "scripts": {
    "format:fix": "dprint fmt",
    "format:check": "dprint check",
    "lint:fix": "eslint --fix {src,__tests__}/**/*.ts *.ts",
    "lint:check": "eslint {src,__tests__}/**/*.ts *.ts",
    "prepackage": "rimraf lib dist",
    "package": "esbuild src/main.ts --bundle --platform=node --target=node16 --packages=external --outfile=lib/main.js && ncc build",
    "postpackage": "rimraf lib",
    "test:ts": "jest --config jest.pre.config.ts",
    "pretest:js": "npm run package",
    "test:js": "jest --config jest.post.config.ts",
    "test": "npm run test:ts && npm run test:js",
    "typecheck": "tsc",
    "all": "concurrently --kill-others-on-fail 'npm run typecheck' 'npm run format:check' 'npm test' 'npm run lint:check'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kachick/wait-other-jobs.git"
  },
  "keywords": [],
  "author": "Kenichi Kamiya <kachick1@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1"
  },
  "devDependencies": {
    "@octokit/types": "^8.1.1",
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/jest": "^29.2.5",
    "@types/node": "^16.18.11",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "@vercel/ncc": "^0.36.0",
    "esbuild": "0.17.1",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.32.0",
    "eslint-plugin-deprecation": "^1.3.3",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^29.3.1",
    "rimraf": "^4.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
