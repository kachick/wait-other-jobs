{
  // https://github.com/tsconfig/bases/blob/d1543a94d47c3ef9af9987790742b09caf71b71d/bases/node16-strictest-esm.combined.json
  "extends": "@tsconfig/node16-strictest-esm/tsconfig.json",
  "compilerOptions": {
    // https://www.typescriptlang.org/docs/handbook/esm-node.html
    // Node12 / Node16 / NodeNext are only in nightly builds for now
    "module": "node16",
    "outDir": "./lib",                        /* Redirect output structure to the directory. */                         /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
    "noImplicitAny": true,                    /* Raise error on expressions and declarations with an implied 'any' type. */
  },
  "include": ["src", "**.config.ts"],
}
