{
  "typescript.experimental.useTsgo": true,
  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.oxc": "explicit"
  },
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "search.exclude": {
    "dist/**": true,
    "node_modules/**": true,
    ".direnv/**": true
  },
  "deno.enable": true,
  "deno.enablePaths": [
    "scripts"
  ],
  "oxc.enable.oxlint": true,
  "oxc.path.oxlint": "./.vscode/oxlint" // Refer node_modules by default. This is workaround for Nix devshell because oxc plugin does not have option to use the oxlint from devshell($PATH)
}
