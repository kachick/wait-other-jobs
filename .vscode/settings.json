{
  "editor.defaultFormatter": "dprint.dprint",
  "editor.formatOnSave": true,
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide"
  },
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "search.exclude": {
    "dist/**": true,
    "node_modules/**": true,
    ".direnv/**": true
  },
  "deno.enable": true,
  "deno.enablePaths": [
    "scripts"
  ]
}
